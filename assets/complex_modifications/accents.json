{
  "title": "Better accents on US keyboard",
  "rules": [
      {
        "description": "Dead accent grave",
        "manipulators": [
          {
            "conditions": [
              {
                "input_sources": [
                  {
                    "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                  }
                ],
                "type": "input_source_if"
              }
            ],
            "from": {
              "key_code": "grave_accent_and_tilde"
            },
            "to": [
              {
                "key_code": "grave_accent_and_tilde",
                "modifiers": [
                  "left_option"
                ]
              }
            ],
            "type": "basic"
          }
        ]
      },
      {
        "description": "Dead accent circonflexe Left Shift",
        "manipulators": [
          {
            "conditions": [
              {
                "input_sources": [
                  {
                    "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                  }
                ],
                "type": "input_source_if"
              }
            ],
            "from": {
              "key_code": "6",
              "modifiers": {
                "mandatory": ["left_shift"]
              }
            },
            "to": [
              {
                "key_code": "i",
                "modifiers": [
                  "right_option"
                ]
              }
            ],
            "type": "basic"
          }
        ]
      },
      {
        "description": "Dead accent circonflexe Right Shift",
        "manipulators": [
          {
            "conditions": [
              {
                "input_sources": [
                  {
                    "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                  }
                ],
                "type": "input_source_if"
              }
            ],
            "from": {
              "key_code": "6",
              "modifiers": {
                "mandatory": ["right_shift"]
              }
            },
            "to": [
              {
                "key_code": "i",
                "modifiers": [
                  "right_option"
                ]
              }
            ],
            "type": "basic"
          }
        ]
      },
      {
        "description": "Auto Ã©",
        "manipulators": [
          {
            "conditions": [
              {
                "input_sources": [
                  {
                    "input_source_id": "^com\\.apple\\.keylayout\\.ABC$"
                  }
                ],
                "type": "input_source_if"
              }
            ],
            "from": {
              "key_code": "e",
              "modifiers": {
                "mandatory": [
                  "right_option"
                ]
              }
            },
            "to": [
              {
                  "key_code": "e",
                  "modifiers": [
                    "right_option"
                  ]
              },
              {
                  "key_code": "e"
              }
            ],
            "type": "basic"
          }
        ]
      }
  ]
}
